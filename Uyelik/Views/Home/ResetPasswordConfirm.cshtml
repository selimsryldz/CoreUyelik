@model PasswordResetViewModel

@{
    ViewData["Title"] = "ResetPasswordConfirm";
}

<div class="row">
    <div class="col-md-4 offset-4">
        <h4 class="pt-5">Yeni Şifre Oluştur</h4>
        <hr />
        @if (ViewBag.status == "success")
        {

            <div class="alert alert-info">@TempData["passwordResetInfo"]</div>
            <a class="btn btn-link" asp-action="Login" asp-controller="Home">Giriş yapmak için tıklayınız</a>
        }
        else
        {

            <form asp-action="ResetPasswordConfirm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="PasswordNew" class="control-label"></label>
                    <input asp-for="PasswordNew" class="form-control" />
                    <span asp-validation-for="PasswordNew" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Yeni Şifre Oluştur" class="btn btn-primary" />
                </div>
            </form>
        }
    </div>
</div>